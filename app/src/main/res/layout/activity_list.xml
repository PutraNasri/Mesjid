<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.kinketkuena.mesjid.List">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:id="@+id/scrollView">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn1"
            android:text="Masjid Jamik Unsyiah" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn1"
            android:id="@+id/btn2"
            android:text="MASJID POLDA" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn2"
            android:id="@+id/btn3"
            android:text="MASJID OMAN" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn3"
            android:id="@+id/btn4"
            android:text="MASJID RAYA BAITURRAHMAN" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn4"
            android:id="@+id/btn5"
            android:text="MASJID PUTIH" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn5"
            android:id="@+id/btn6"
            android:text="MASJID BAITUL HALIM " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn6"
            android:id="@+id/btn7"
            android:text="MASJID TUNGKOP" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn7"
            android:id="@+id/btn8"
            android:text="MASJID TANJUNG SELAMAT" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn8"
            android:id="@+id/btn9"
            android:text="MASJID FATHUN QARIB" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn9"
            android:id="@+id/btn10"
            android:text="MASJID ASKOPMA RUKOH" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn10"
            android:id="@+id/btn11"
            android:text="MASJID AL-WUTHA" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn11"
            android:id="@+id/btn12"
            android:text="MASJID IBNU SINA" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn12"
            android:id="@+id/btn13"
            android:text="MASJID RAUDHATUL JANNAH" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn13"
            android:id="@+id/btn14"
            android:text="MASJID AL BADAR" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
